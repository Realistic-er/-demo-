/* pages/goods_detail/index.wxss */
page{
  padding-bottom: 90rpx;
}
.detail-swiper swiper{
  height: 70vw;
  text-align: center;
}
.detail-swiper image{
  width: 60%;
}
.goods_price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #eb4450;
}
.goods_name_row{
  display: flex;
  color: #000;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.goods_name_row .goods_name{
  flex: 5;
}
.goods_collect{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 2rpx solid #000;
}
.btm_tool{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
}
.tool_item{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12rpx;
  position: relative;
}
.button_one{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
